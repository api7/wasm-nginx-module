root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
; the C code's indentation depends on the syntax
;indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.go]
indent_style = tab
block_comment_start = /*
block_comment = *
block_comment_end = */

[**/go.mod]
indent_style = tab
